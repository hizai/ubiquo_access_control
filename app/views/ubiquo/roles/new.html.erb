<h1><%= render :partial => 'title' %></h1>
<h2><%= render :partial => 'submenu' %></h2>

<%= error_messages_for 'role' %>

<%= ubiquo_form_for @role do |form| %>
  <%= render :partial => 'form', :locals => { :form => form } %>
  <%= form.submit_group do %>
    <%= form.create_button %>
    <%= form.back_button %>
  <% end %>
<% end %>

<% content_for :sidebar do %>
  <%= help_block_sidebar(t("ubiquo.helpmsg.authentication.roles.new")) %>
<% end %>
